<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.sm.app.repository.CaseRepository">

    <resultMap id="CaseResultMap" type="edu.sm.app.dto.Case">
        <id property="caseId" column="case_id" />
        <result property="caseNumber" column="case_number" />
        <result property="caseType" column="case_type" />
        <result property="defendant" column="defendant" />
        <result property="charge" column="charge" />
        <result property="description" column="description" />
        <result property="status" column="status" />
        <result property="verdict" column="verdict" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <sql id="caseColumns">
        case_id, case_number, case_type, defendant, charge, description,
        status, verdict, created_at, updated_at
    </sql>

    <!-- 전체 조회 -->
    <select id="selectAll" resultMap="CaseResultMap">
        SELECT <include refid="caseColumns"/>
        FROM trial_case
        ORDER BY created_at DESC
    </select>

    <!-- ID로 조회 -->
    <select id="select" parameterType="int" resultMap="CaseResultMap">
        SELECT <include refid="caseColumns"/>
        FROM trial_case
        WHERE case_id = #{caseId}
    </select>

    <!-- 사건 등록 -->
    <insert id="insert" parameterType="edu.sm.app.dto.Case" useGeneratedKeys="true" keyProperty="caseId">
        INSERT INTO trial_case
        (case_number, case_type, defendant, charge, description, status, created_at, updated_at)
        VALUES
            (#{caseNumber}, #{caseType}, #{defendant}, #{charge}, #{description},
             'registered', NOW(), NOW())
    </insert>

    <!-- 사건 수정 -->
    <update id="update" parameterType="edu.sm.app.dto.Case">
        UPDATE trial_case
        SET case_type = #{caseType},
            defendant = #{defendant},
            charge = #{charge},
            description = #{description},
            status = #{status},
            verdict = #{verdict},
            updated_at = NOW()
        WHERE case_id = #{caseId}
    </update>

    <!-- 사건 삭제 -->
    <delete id="delete" parameterType="int">
        DELETE FROM trial_case WHERE case_id = #{caseId}
    </delete>

    <!-- 상태별 조회 -->
    <select id="selectByStatus" parameterType="string" resultMap="CaseResultMap">
        SELECT <include refid="caseColumns"/>
        FROM trial_case
        WHERE status = #{status}
        ORDER BY created_at DESC
    </select>

    <!-- 피고인별 조회 -->
    <select id="selectByDefendant" parameterType="string" resultMap="CaseResultMap">
        SELECT <include refid="caseColumns"/>
        FROM trial_case
        WHERE defendant LIKE CONCAT('%', #{defendant}, '%')
        ORDER BY created_at DESC
    </select>

    <!-- 사건번호로 조회 -->
    <select id="selectByCaseNumber" parameterType="string" resultMap="CaseResultMap">
        SELECT <include refid="caseColumns"/>
        FROM trial_case
        WHERE case_number = #{caseNumber}
    </select>
</mapper>